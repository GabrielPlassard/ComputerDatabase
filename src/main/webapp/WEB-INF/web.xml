<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">


    <display-name>Computer database</display-name>

    <servlet>
        <description></description>
        <display-name>IndexServlet</display-name>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.excilys.computerdatabase.servlet.IndexServlet</servlet-class>
    </servlet>

    <servlet>
        <description></description>
        <display-name>NewComputerServlet</display-name>
        <servlet-name>NewComputerServlet</servlet-name>
        <servlet-class>com.excilys.computerdatabase.servlet.NewComputerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/computers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewComputerServlet</servlet-name>
        <url-pattern>/computers/new</url-pattern>
    </servlet-mapping>



</web-app>
